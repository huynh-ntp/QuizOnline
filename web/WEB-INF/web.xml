        <filter-name>MainFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletListener</description>
        <listener-class>huynhntp.util.ServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>huynhntp.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>huynhntp.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartQuizController</servlet-name>
        <servlet-class>huynhntp.controller.StartQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NextQuestionController</servlet-name>
        <servlet-class>huynhntp.controller.NextQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkController</servlet-name>
        <servlet-class>huynhntp.controller.MarkController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryController</servlet-name>
        <servlet-class>huynhntp.controller.HistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>huynhntp.controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>huynhntp.controller.AdminController</servlet-class>
    </servlet>
